<div class="container">
  <div class="login">
    <div class="login-screen">
      <div class="login-icon">
	<%= image_tag("premierball.png") %>
	<h4>Welcome to <small>My Pokemon Collection</small></h4>
      </div>
      <div class="login-form">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
	  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control login-field", id: "mail"  %>
	</div>

	<div class="form-group">
	  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control login-field", id: "password" %>
	</div>

	<div class="actions">
	  <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
	</div>

	<% if devise_mapping.rememberable? -%>
	    <label class="checkbox" for="checkbox0">
	      <%= f.check_box :remember_me, type: "checkbox", class: "custom-checkbox", id: "checkbox0", data: {toggle: "checkbox"} %>
	      <span style="color:#bfc9ca">Remember me</span>
	    </label>
	<% end -%>

	<div class="row">
	  <div class="col-xs-6">
	    <%= link_to "Lost your password?", new_password_path(:user), class: "login-link" %>
	  </div>
	  <div class="col-xs-6">
	    <%= link_to "Sign up", new_registration_path(:user), class: "login-link" %>
          </div>
	</div>
	<% end -%>
      </div>
    </div>
  </div>
</div>
