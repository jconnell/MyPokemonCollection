<div class="container">
  <h4>Recently Added</h4>
  <div class="row">
    <div class="recently-added-col">
      <div class="pokemon-item">
	<dl class="pokemon electric-name">
	  <h7>Pikachu</h7>
	</dl>
	<dl class="pokemon electric-sprite">
	  <img src="http://pokeapi.co/media/img/25.png" width="100px" />
	</dl>
      </div>
      <div class="pokemon-item">
	<dl class="pokemon water-name">
	  <h7>Squirtle</h7>
	</dl>
	<dl class="pokemon water-sprite">
	  <img src="http://pokeapi.co/media/img/7.png" width="100px" />
	</dl>
      </div>
      <div class="pokemon-item">
	<dl class="pokemon plant-name">
	  <h7>Bulbasaur</h7>
	</dl>
	<dl class="pokemon plant-sprite">
	  <img src="http://pokeapi.co/media/img/1.png" width="100px" />
	</dl>
      </div>
      <div class="pokemon-item">
	<dl class="pokemon fire-name">
	  <h7>Charmander</h7>
	</dl>
	<dl class="pokemon fire-sprite">
	  <img src="http://pokeapi.co/media/img/4.png" width="100px" />
	</dl>
      </div>
    </div>
  </div>

  <h4>My Collection</h4>
  <table class="table table-striped">
    <thead>
      <tr>
	<th>#</th>
	<th>Name</th>
	<th>Type</th>
	<th>Level</th>
	<th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pokemons.each do |pokemon| %>
	<tr>
          <td><%= pokemon.dex_number %></td>
	  <td><%= pokemon.name %></td>
          <td><%= pokemon.type_1 %><% if pokemon.type_2 %><%= ", #{pokemon.type_2}" %><% end %></td>
          <td><%= pokemon.level %></td>
          <td><%= link_to 'Show', pokemon %></td>
          <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
          <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
  <br /><br />
</div>
